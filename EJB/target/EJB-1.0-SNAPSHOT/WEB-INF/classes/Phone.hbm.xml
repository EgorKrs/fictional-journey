<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.loneliness.entity.Phone" table="phone">
    <id column="id" name="id" type="java.lang.Integer">
    <generator class="increment"/>
    </id>
        <property column="model" name="model" type="java.lang.String"/>
        <property column="category" name="category" type="java.lang.String"/>
        <property column="price" name="price" type="java.math.BigDecimal"/>
        <property column="status" name="status" type="java.lang.Boolean"/>
    </class>
</hibernate-mapping>